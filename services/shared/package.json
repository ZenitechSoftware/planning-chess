{
  "name": "planning-chess-shared",
  "version": "1.0.0",
  "description": "Shared primitives for planning chess",
  "author": "Planning Chess",
  "license": "MIT",
  "main": "dist/lib/shared.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "spell": "cspell 'lib/**' 'test/**'",
    "format": "prettier --check lib/** test/**",
    "lint": "eslint lib/** test/**",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest ./test",
    "coverage": "jest --collectCoverage",
    "ci": "npm run spell && npm run format && npm run lint && npm run build && npm test"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "cspell": "^5.13.1",
    "eslint": "^7.12.0",
    "jest": "^26.4.2",
    "prettier": "^2.2.1",
    "prettier-plugin-pretty-imports": "^0.0.2",
    "ts-jest": "^26.3.0",
    "ts-node-dev": "^1.0.0-pre.56",
    "typescript": "^3.9.7"
  }
}
